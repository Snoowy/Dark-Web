---
import Main from "../layouts/MainLayout.astro";

interface Props {
  title?: string;
  subTitle?: string;
  bannerImage?: string;
  published?: Date;
}
const { title, subTitle, bannerImage, } = Astro.props;
---

<style>

  /* Contenedor central del formulario con fondo blanco */
  .registro {
    max-width: 400px;
    margin: 50px auto;
    padding: 30px;
    background-color: #fff; /* Fondo blanco */
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .registro h1 {
    text-align: center;
    margin-bottom: 20px;
    font-size: 1.8rem;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .form-group input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  button[type="submit"] {
    width: 100%;
    padding: 12px;
    background-color: #0077cc;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button[type="submit"]:hover {
    background-color: #005fa3;
  }
</style>

<Main title={title} subTitle={subTitle} bannerImage={bannerImage}>
  <section class="registro">
    <h1>Regístrate</h1>
    <form method="POST" action="/api/register">
      <!-- Campo oculto para indicar el modo de registro -->
      <input type="hidden" name="modo" value="REGISTRO" />

      <div class="form-group">
        <label for="user">Usuario:</label>
        <input type="text" name="user" id="user" placeholder="Tu usuario" required />
      </div>

      <div class="form-group">
        <label for="email">Correo electrónico:</label>
        <input type="email" name="email" id="email" placeholder="Tu correo" required />
      </div>

      <div class="form-group">
        <label for="password">Contraseña:</label>
        <input type="password" name="password" id="password" placeholder="Tu contraseña" required />
      </div>

      <button type="submit">Registrarse</button>
    </form>
  </section>
</Main>